{
    "version": "8.0.1_8",
    "description": "Command line tool and library for transferring data with URLs",
    "homepage": "https://curl.se/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://curl.se/windows/dl-8.0.1_8/curl-8.0.1_8-win64-mingw.tar.xz",
            "hash": "8350357c73f975bf22f4d8aec300d16d871af5b2308f18865b905ed3283cee6e",
            "extract_dir": "curl-8.0.1_8-win64-mingw"
        },
        "32bit": {
            "url": "https://curl.se/windows/dl-8.0.1_8/curl-8.0.1_8-win32-mingw.tar.xz",
            "hash": "eff896d65afa95ab2094a5b74666803c75ec794a1fd09d6a0f0034c1391cb8c3",
            "extract_dir": "curl-8.0.1_8-win32-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.0.1_8/curl-8.0.1_8-win64a-mingw.tar.xz",
            "hash": "053611121dd7b32a332d04e82bf6ebacdbdae27bb1bd83ce0d22bd7e8cf6b9ca",
            "extract_dir": "curl-8.0.1_8-win64a-mingw"
        }
    },
    "bin": "bin\\curl.exe",
    "checkver": {
        "url": "https://curl.se/windows/",
        "regex": "Build<\\/b>:\\s+([\\d._]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://curl.se/windows/dl-$version/curl-$version-win64-mingw.tar.xz",
                "extract_dir": "curl-$version-win64-mingw"
            },
            "32bit": {
                "url": "https://curl.se/windows/dl-$version/curl-$version-win32-mingw.tar.xz",
                "extract_dir": "curl-$version-win32-mingw"
            },
            "arm64": {
                "url": "https://curl.se/windows/dl-$version/curl-$version-win64a-mingw.tar.xz",
                "extract_dir": "curl-$version-win64a-mingw"
            }
        },
        "hash": {
            "url": "$baseurl/hashes.txt",
            "regex": "SHA2-256\\($basename\\)=\\s+$sha256"
        }
    },
    "post_install": [
        "if (Test-Path \"$persist_dir\\curl-ca-bundle.crt\") {",
        "	$diff = Compare-Object $(Get-Content \"$persist_dir\\curl-ca-bundle.crt\") $(Get-Content \"$dir\\bin\\curl-ca-bundle.crt\")",
        "	if (!($null -eq $diff)) {",
        "		$resolved = $false",
        "		$options = \"&Keep persisted certificates\", \"&Overwrite with new certificates\", \"&Examine difference\"",
        "		while (!$resolved) {",
        "			$choice = $Host.UI.PromptForChoice(\"Detected change in curl-ca-bundle.crt\", $null, $options, 0)",
        "			switch ($choice) {",
        "				0 { Copy-Item \"$persist_dir\\curl-ca-bundle.crt\" \"$dir\\bin\\curl-ca-bundle.crt\" ; $resolved = $true; break }",
        "				1 { $resolved = $true; break }",
        "				2 { Write-Output \"<=: persisted certificates`n=>: new certificates\"; $diff | Out-String | Write-Output ; break }",
        "			}",
        "		}",
        "	}",
        "}"
    ],
    "pre_uninstall": [
        "# Persist manually curl-ca-bundle.crt",
        "if (Test-Path \"$dir\\bin\\curl-ca-bundle.crt\") {",
        "    ensure \"$persist_dir\" | Out-Null",
        "    Copy-Item \"$dir\\bin\\curl-ca-bundle.crt\" \"$persist_dir\\\" -Force -Recurse",
        "}"
    ]
}
